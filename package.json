{
  "name": "poc-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "db": "typeorm",
    "db:migrate": "typeorm migration:run",
    "clean": "rm -rf dist/ yarn-error.log",
    "prebuild": "npm run clean",
    "build": "npm run build-routes && npm run build-ts && npm run build-swagger && npm run lint",
    "serve": "node dist/server.js",
    "test": "echo 'TODO'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-swagger": "tsoa swagger",
    "build-routes": "tsoa routes",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "pretypeorm": "npm run build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm -f src/ormconfig.ts"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "convict": "^4.4.1",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "method-override": "^3.0.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "swagger-ui-express": "^4.0.2",
    "tsoa": "^2.3.8",
    "typeorm": "^0.2.9",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/convict": "^4.2.1",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/method-override": "^0.0.31",
    "@types/node": "^10.12.18",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/winston": "^2.4.4",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2"
  }
}
