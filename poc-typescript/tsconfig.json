{
  "compilerOptions": {
	"module": "commonjs",
	"esModuleInterop": true,
	"experimentalDecorators": true,
	"target": "es6",
	"noImplicitAny": true,
	"moduleResolution": "node",
	"sourceMap": true,
	"outDir": "dist",
	"baseUrl": ".",
	"lib": [
	  "ES2015",
	  "ES2016",
	  "ES2017",
	  "ES2018"
	],
	"paths": {
	  "*": [
		"node_modules/*",
		"src/types/*"
	  ]
	}
  },
  "include": [
	"src/**/*"
  ]
}
